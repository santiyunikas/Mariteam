<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DetailActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buy"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_min"
            android:id="@+id/btn_min"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:id="@+id/input_weight"
            />
        <Button
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_plus"
            android:id="@+id/btn_plus"
            />
        <Button
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/beli_sekarang"
            android:background="@drawable/round_button"
            android:id="@+id/btn_buy"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <Button
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shopping_cart"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:id="@+id/sc"
        android:layout_above="@+id/buy">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/img_detail"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/judul"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:id="@+id/tv_title_detail"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/harga"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/tv_price_detail"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dikirim_dari"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:id="@+id/tv_sendFrom_detail"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nama_toko"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:id="@+id/tv_store_detail"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/informasi_produk"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/info"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info"
                    android:text="@string/berat"
                    android:id="@+id/info_weight"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info"
                    android:layout_toRightOf="@id/info_weight"
                    android:text="@string/berat"
                    android:gravity="right"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_weight_detail" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_weight"
                    android:text="@string/kondisi"
                    android:id="@+id/info_condition"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_weight"
                    android:layout_toRightOf="@id/info_weight"
                    android:text="@string/kondisi"
                    android:gravity="right"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/tv_condition_detail"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_condition"
                    android:text="@string/pemesanan_min"
                    android:id="@+id/info_pemesananmin"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_condition"
                    android:layout_toRightOf="@id/info_pemesananmin"
                    android:text="@string/pemesanan_min"
                    android:gravity="right"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/tv_minorder_detail"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_pemesananmin"
                    android:text="@string/lama_pre_order"
                    android:id="@+id/info_lamapo"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_pemesananmin"
                    android:layout_toRightOf="@id/info_lamapo"
                    android:text="@string/lama_pre_order"
                    android:gravity="right"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/tv_preordertime_detail"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_lamapo"
                    android:text="@string/kategori"
                    android:id="@+id/info_kategori"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_lamapo"
                    android:layout_toRightOf="@id/info_kategori"
                    android:text="@string/kategori"
                    android:gravity="right"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/tv_category_detail"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/deskripsi_produk"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_desc_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/deskripsi_lengkap_dari_produk"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

