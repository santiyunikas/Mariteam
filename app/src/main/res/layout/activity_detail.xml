<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DetailActivity"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/img_detail"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/judul"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:id="@+id/tv_title_detail"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/harga"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/tv_price_detail"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dikirim_dari"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:id="@+id/tv_sendFrom_detail"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nama_toko"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:id="@+id/tv_store_detail"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/informasi_produk"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/info"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info"
                    android:text="@string/berat"
                    android:id="@+id/info_weight"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info"
                    android:layout_toRightOf="@id/info_weight"
                    android:text="@string/berat"
                    android:gravity="right"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_weight_detail" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_weight"
                    android:text="@string/kondisi"
                    android:id="@+id/info_condition"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_weight"
                    android:layout_toRightOf="@id/info_weight"
                    android:text="@string/kondisi"
                    android:gravity="right"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/tv_condition_detail"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_condition"
                    android:text="@string/pemesanan_min"
                    android:id="@+id/info_pemesananmin"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_condition"
                    android:layout_toRightOf="@id/info_pemesananmin"
                    android:text="@string/pemesanan_min"
                    android:gravity="right"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/tv_minorder_detail"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_pemesananmin"
                    android:text="@string/lama_pre_order"
                    android:id="@+id/info_lamapo"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_pemesananmin"
                    android:layout_toRightOf="@id/info_lamapo"
                    android:text="@string/lama_pre_order"
                    android:gravity="right"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/tv_preordertime_detail"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_lamapo"
                    android:text="@string/kategori"
                    android:id="@+id/info_kategori"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/info_lamapo"
                    android:layout_toRightOf="@id/info_kategori"
                    android:text="@string/kategori"
                    android:gravity="right"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/tv_category_detail"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/deskripsi_produk"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="@string/deskripsi_lengkap_dari_produk"
                    android:id="@+id/tv_desc_detail"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

